<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/alarm_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闹钟标题"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/alarm_alert_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闹钟时间"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:layout_below="@+id/alarm_alert_title"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/img_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_up1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/alarm_alert_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="向上滑动停止闹钟"
        android:layout_alignTop="@+id/img_up"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
