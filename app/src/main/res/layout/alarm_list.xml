<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="60dp"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="07:55"
            android:textColor="#000000"
            android:textSize="16sp"/>

    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#b4b4b4"
        android:layout_toRightOf="@id/ll"/>

    <TextView
        android:id="@+id/alarm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="闹钟名称"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/line"/>


    <TextView
        android:id="@+id/alarm_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="周一 周二 周三 周五 周六"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_toRightOf="@id/line"
        android:layout_below="@+id/alarm_name"/>

    <TextView
        android:id="@+id/alarm_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="10dp"
        android:text="2018年8月22日"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_toStartOf="@id/line2"/>



    <Switch
        android:id="@+id/alarm_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/line2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#b4b4b4"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/alarm_switch"/>

</RelativeLayout>